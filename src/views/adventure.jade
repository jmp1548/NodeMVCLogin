extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/stylesheet.css")
block body
  nav
    a(href="/login")
    .navlink
      a(href="/logout") Log out
  section
    div#map-div
    h1 Adventure Page
      form#adventureForm(class="adventureForm", name="adventureForm", action="/start", method="POST")
        div#formActions
            h2 Start new adventure form
            label(for="title") Title: 
            input#atitle(type="text", name="title", placeholder="title")
            label(for="longitude") Longitude: 
            input#alongitude(type="text", name="longitude", placeholder="longitude")
            label(for="age") Latitude: 
            input#alatitude(type="text", name="latitude", placeholder="latitude")
            a#agetLocations(class="getButton", href="#") Get Location
            a#addAdventure(class="submitbutton", href="#") Submit Locations 
        div#errorMessage
    form#pointForm(class="pointForm", name="pointForm", action="/point", method="POST")
        div#formActions
            h2 Add path point form
            label(for="longitude") Longitude: 
            input#olongitude(type="text", name="longitude", placeholder="longitude")
            label(for="age") Latitude: 
            input#olatitude(type="text", name="latitude", placeholder="latitude")
            a#ogetLocations(class="getButton", href="#") Get Location
            a#addPoint(class="submitbutton", href="#") Submit Point 
        div#errorMessage
    form#postForm(class="postForm", name="postForm", action="/post", method="POST")
        div#formActions
            h2 Start new adventure form
            label(for="post") Post: 
            input#post(type="text", name="post", placeholder="post content goes here")
            label(for="longitude") Longitude: 
            input#plongitude(type="text", name="longitude", placeholder="longitude")
            label(for="age") Latitude: 
            input#platitude(type="text", name="latitude", placeholder="latitude")
            a#pgetLocations(class="getButton", href="#") Get Location
            a#addPost(class="submitbutton", href="#") Submit Post 
        div#errorMessage
  img(class="ajaxLoader", src="/assets/img/ajax-loader.gif" alt="Loading Image")
  section#Locations
    if !locations || locations.length == 0
        div.location
            h3.emptyLocations No Locations yet
    else
        each val in locations
            div.location
                h3.longitude Longitude: #{val.longitude}
                h3.latitude Latitude: #{val.latitude}
block scripts
        script(src="/assets/adventure.js")
        script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA6RYGB6WBp3etiIGhfuFE6CBpjAo-hJW4")
        script(src="/assets/geolocation-throttle.js")
        script(src="/assets/map.js")