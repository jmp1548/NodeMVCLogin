extends ./base.jade
block append style
block body
  ul(class="navigation")
    li(class="nav-item")
        a(href="/login") Login
        a(href="/signup") Sign Up
  input#nav-trigger(type="checkbox" class="nav-trigger")
  label(for="nav-trigger")
    i(class="fa fa-bars")
  div(class="site-wrap")
      section(class="wrapper")
            div#signup
                img(class="logo", src="/assets/img/logo.png" alt="Logo")
                form#signupForm(class="mainForm", name="loginForm", action="/login", method="POST")
                  div#username 
                      input#user(type="text", name="username", placeholder="Username")
                  div#password
                      input#pass(type="password", name="pass", placeholder="Password" class="")
                  div#password
                      input#pass2(type="password", name="pass", placeholder="Password" class="")
                  div(class="clear")
                  small#errorMessage
                  input#signupSubmit(class="formSubmit", type="submit", value="Sign Up")
                  

block scripts
        script(src="/assets/client.js")